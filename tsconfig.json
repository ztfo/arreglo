{
    "compilerOptions": {
      "target": "es6",
      "module": "esnext",
      "lib": ["es2017", "dom"],
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "types": ["@figma/plugin-typings", "node"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }